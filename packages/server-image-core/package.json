{
  "name": "@sebasgarcep/server-image-core",
  "version": "0.1.0",
  "description": "A React component for responsive images in Remix",
  "authors": [
    "Josh McFarlin <josh@mcfarl.in>",
    "Sebastian Garrido <sebasgarcep@gmail.com>"
  ],
  "license": "MIT",
  "sideEffects": false,
  "keywords": [
    "react",
    "remix",
    "image",
    "responsive"
  ],
  "homepage": "https://remix-image.mcfarl.in",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebasgarcep/server-image.git",
    "directory": "packages/remix-image"
  },
  "bugs": {
    "url": "https://github.com/sebasgarcep/server-image/issues"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": "./build/index.js"
  },
  "files": [
    "build",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "lint": "eslint --fix --ext ts --ext tsx --ext js --ext jsx .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest -c=../../jest.config.js --passWithNoTests",
    "test:watch": "jest -c=../../jest.config.js --watch",
    "prebuild": "rimraf coverage build tmp",
    "build": "rollup -c --bundleConfigAsCjs",
    "watch": "rollup -c -w --bundleConfigAsCjs",
    "release": "dotenv release-it --"
  },
  "dependencies": {
    "query-string": "^7.1.3"
  }
}
